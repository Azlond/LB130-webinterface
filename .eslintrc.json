{
    "env": {
        "browser": true
    },
    "extends": "eslint-config-airbnb",
    "rules": {
        "func-names": [
            "error",
            "never"
        ],
        "spaced-comment": "off",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "default-case": "off",
        "no-console": "off",
        "max-len": "off",
        "class-methods-use-this": "off",
        "no-bitwise": "off",
        "comma-dangle": ["error", "never"],
        "no-unused-vars": ["error", { "args": "none" }]
    },
    "globals": {
        "bulb": true,
        "__HOST__": true,
        "__PORT__": true
    }
}